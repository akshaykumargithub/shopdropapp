<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <RelativeLayout
        android:layout_width="132dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginStart="5dp"
        android:layout_marginTop="@dimen/pad_5dp"
        android:background="@drawable/corner_black"
        android:id="@+id/card1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/title"
            android:layout_marginTop="@dimen/pad_25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="274dp"
            android:text="@string/product_basic_info"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/secondory_color"
            android:textAllCaps="true"

            android:ellipsize="end"
            android:padding="@dimen/pad_5dp"
            android:gravity="center"
            android:layout_below="@+id/image1"
            android:visibility="visible" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/pad_1dp"
            android:background="@color/black"
            android:layout_below="@+id/title"
            android:id="@+id/line1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line1"
            android:orientation="vertical"
            android:id="@+id/attributes"/>
    </RelativeLayout>
</layout>