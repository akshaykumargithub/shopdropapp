<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/colorlabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="Color"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15sp"
         />

    <Spinner
        android:id="@+id/configoptions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/colorlabel"
        android:layout_margin="5dp"
        android:padding="4dp"
        android:background="@drawable/filterselector"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_alignTop="@id/configoptions"
        android:layout_alignEnd="@id/configoptions"
        android:layout_alignBottom="@id/configoptions"
        android:src="@drawable/ic_down"/>

</RelativeLayout>