<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/main1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewdata"
                android:layout_centerHorizontal="true">

                <RelativeLayout
                    android:id="@+id/section1"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/items_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/delivery"
                        android:tint="@color/AppTheme"/>

                    <TextView
                        android:id="@+id/items_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/items_icon"
                        android:text="@string/order_id"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                         />

                    <TextView
                        android:id="@+id/items_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/items_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/items_icon"
                        android:textColor="#B6B6B6"
                        android:textSize="13sp"
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/section2"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/section1"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/amount_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/rich"
                        android:tint="@color/AppTheme"/>

                    <TextView
                        android:id="@+id/amount_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/amount_icon"
                        android:text="@string/amount"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                         />

                    <TextView
                        android:id="@+id/amount_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/amount_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/amount_icon"
                        android:textColor="#B6B6B6"
                        android:textSize="13sp"
                         />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/main1"
                android:layout_margin="2dp"
                android:background="@color/ebebebe"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/main2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp">

                <RelativeLayout
                    android:id="@+id/section3"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:gravity="center"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/ship_to_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/avatarnew"
                        android:tint="@color/AppTheme"/>

                    <TextView
                        android:id="@+id/ship_to_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ship_to_icon"
                        android:text="@string/shipto"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                         />

                    <TextView
                        android:id="@+id/ship_to_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ship_to_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/ship_to_icon"
                        android:textColor="#B6B6B6"
                        android:textSize="13sp"
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/section4"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/section3"
                    android:background="@color/white">

                    <ImageView
                        android:id="@+id/order_status_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:src="@drawable/orderstatus"
                        android:tint="@color/AppTheme"/>

                    <TextView
                        android:id="@+id/order_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/order_status_icon"
                        android:text="@string/statusnative"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="13sp"
                         />

                    <TextView
                        android:id="@+id/order_status_text_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_status_text"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_toEndOf="@+id/order_status_icon"
                        android:textColor="#B6B6B6"
                        android:textSize="13sp"
                         />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/incrementorder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/viewdata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:text="@string/Viewdetails"
                android:textAllCaps="true"
                android:textColor="@color/AppTheme"
                 />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
