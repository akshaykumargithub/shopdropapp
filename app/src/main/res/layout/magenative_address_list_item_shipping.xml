<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/MageNative_client_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:id="@+id/MageNative_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <CheckBox
                    android:id="@+id/selectaddress"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="0.9"
                    android:gravity="start"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/MageNative_prefix"
                            android:layout_width="wrap_content"
                            android:fontFamily="@font/celias_regular"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:paddingEnd="@dimen/pad_5dp"
                            android:textSize="@dimen/txt_13sp" />

                        <TextView
                            android:id="@+id/MageNative_client_firstname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/celias_regular"
                            
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_13sp" />

                        <TextView
                            android:id="@+id/MageNativemiddlename"
                            android:fontFamily="@font/celias_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_13sp" />

                        <TextView
                            android:id="@+id/MageNative_client_lastname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:fontFamily="@font/celias_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_13sp" />

                        <TextView
                            android:id="@+id/MageNative_suffix"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:paddingStart="5dp"
                            android:fontFamily="@font/celias_regular"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_13sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/MageNative_client_street"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:textColor="@color/black"
                            android:fontFamily="@font/celias_regular"
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/pad_5dp"
                            android:text="," />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/MageNative_client_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/celias_regular"
                            
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/pad_2dp"
                            android:text=","
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:id="@+id/MageNative_client_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/pad_5dp"
                            android:text=","
                            android:textSize="@dimen/txt_15sp" />


                    </LinearLayout>
                    <!--            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="10dp" />-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/MageNative_client_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="middle"
                            android:maxLength="25"
                            
                            android:fontFamily="@font/celias_regular"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/pad_2dp"
                            android:text="-"
                            android:textSize="@dimen/txt_15sp" />

                        <TextView
                            android:id="@+id/MageNative_client_pincode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/MageNative_client_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:fontFamily="@font/celias_regular"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_15sp" />

                    <TextView
                        android:id="@+id/MageNative_taxvat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@color/black"
                        android:fontFamily="@font/celias_regular"
                        android:textSize="@dimen/txt_15sp" />

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>