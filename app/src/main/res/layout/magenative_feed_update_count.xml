<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/AppTheme"
    android:clickable="true">
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/pad_5dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/MageNative_hotlist_bell"
            android:layout_width="@dimen/pad_35dp"
            android:layout_height="@dimen/pad_30dp"
            android:tint="@color/txtapptheme_color"
            android:layout_centerInParent="true"
            android:src="@drawable/cart_white_line48"/>
    </RelativeLayout>
        <TextView
            android:id="@+id/MageNative_hotlist_hot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:padding="1dp"
            android:layout_marginEnd="@dimen/pad_2dp"
            android:background="@drawable/ic_circle"
            android:gravity="center"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="8sp" />

</FrameLayout>