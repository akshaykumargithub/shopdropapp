<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/gray_light">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/white"
        android:layout_margin="3dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/MageNative_productrsection1"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/MageNative_wishlist1"
                    android:src="@drawable/wishlike"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"

                    android:background="@color/white"/>
                <ImageView

                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:id="@+id/MageNative_productImage1"
                    android:background="@color/white"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/MageNative_productId1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MageNative_wishlistid1"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/MageNative_productName1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/MageNative_productId"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textSize="14sp"
                    android:textColor="#000"
                    android:layout_marginTop="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:textColorHighlight="#FFFFFF"

                    />
                <TextView
                    android:id="@+id/MageNative_productspecailPrice1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@+id/MageNative_productPrice"
                    android:layout_marginStart="5dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="15sp"
                    android:textColor="@color/red"
                    android:text="$0"
                    android:visibility="gone"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="1dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp">
                    <TextView
                        android:id="@+id/MageNative_productPrice1"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_below="@+id/MageNative_productName"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="13sp"
                        android:textColor="@color/bd"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"

                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/offertext"
                        android:layout_toEndOf="@+id/MageNative_productPrice1"
                        android:layout_marginStart="5dp"
                        android:textSize="13sp"
                        android:textColor="#BDBDBD"
                        android:layout_marginTop="2dp"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/MageNative_productspecailPrice1"
                    android:layout_marginTop="4dp"
                    android:id="@+id/MageNative_reviewsection"
                    android:layout_marginStart="5dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:adjustViewBounds="true"
                        android:id="@+id/MageNative_star1"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:id="@+id/MageNative_star2"
                        android:layout_marginStart="2dp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:id="@+id/MageNative_star3"
                        android:layout_marginStart="2dp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:id="@+id/MageNative_star4"
                        android:layout_marginStart="2dp"
                        />
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:id="@+id/MageNative_star5"
                        android:layout_marginStart="2dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:id="@+id/MageNative_reviewtext"
                        android:textSize="12sp"
                        android:layout_toEndOf="@+id/MageNative_star"
                        android:layout_marginStart="2dp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Viewdetails"
                    android:id="@+id/viewdetails"
                    android:textColor="@color/secondory_color"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="true"
                    android:visibility="gone"

                    android:layout_margin="2dp"
                    android:textSize="13sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="65dp"
                android:layout_height="25dp"
                android:background="@color/secondory_color"
                android:layout_marginTop="25dp"
                android:visibility="gone"
                android:id="@+id/percentagerelative">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/percentage"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:textStyle="bold|italic"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>

