<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            app:cardUseCompatPadding="true"
            android:id="@+id/MageNative_view"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MageNative_review_headtitle"
                    android:textColor="@color/black"
                    android:text="@string/tittle"
                    android:textSize="@dimen/txt_18sp"
                    android:paddingStart="@dimen/pad_10dp"
                    android:paddingTop="@dimen/pad_10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
               >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.50"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/pad_5dp"
                    android:background="@drawable/linear_border"
                    android:layout_weight="0.68">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_5dp" />
<!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    >


                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/pad_10dp"
                        android:text="@string/price"
                        android:layout_gravity="center"
                        android:layout_weight="0.50"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/black"

                        android:gravity="start" />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MageNative_price_rating"
                        android:clickable="false"
                        style = "?android:attr/ratingBarStyleSmall"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:isIndicator="true"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/pad_10dp"
                        android:text="@string/value"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:layout_weight="0.49"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/black"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MageNative_value_rating"
                        android:clickable="false"
                        style = "?android:attr/ratingBarStyleSmall"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:isIndicator="true"

                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/pad_10dp"
                        android:text="@string/Quality"
                        android:gravity="start"
                        android:layout_gravity="center"
                        android:layout_weight="0.45"
                        android:textSize="@dimen/txt_14sp"
                        android:textColor="@color/black"
                        />
                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MageNative_qunatity_rating"
                        android:clickable="false"
                        style = "?android:attr/ratingBarStyleSmall"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:isIndicator="true"
                        />
                </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_15dp"


                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="0.99">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/by"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/MageNative_review_by"
                        android:textSize="@dimen/pad_15dp"
                        android:textColor="@color/black"

                        />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/pad_15dp"
                    android:id="@+id/MageNative_posted_on"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_13sp"

                    android:layout_weight="0.5" />
            </LinearLayout>
            </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MageNative_review_title"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/txt_18sp"
                    android:paddingStart="@dimen/pad_10dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pad_15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/MageNative_review_description"
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/pad_10dp"
                    android:paddingBottom="@dimen/pad_15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>