<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/MageNative_reviewsection"
        android:layout_width="45dp"
        android:layout_height="20dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_corner"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/MageNative_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="4dp"
            android:adjustViewBounds="true"
            android:src="@drawable/stat_white" />

        <TextView
            android:id="@+id/MageNative_reviewtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="4dp"
            android:text="3.0"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/MageNative_review_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/MageNative_reviewsection"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#5C5C5C"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/MageNative_review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MageNative_review_tittle"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:textColor="#5C5C5C"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/MageNative_review_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MageNative_review_description"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="#5C5C5C"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/MageNative_posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/MageNative_review_description"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/MageNative_review_by"
        android:textColor="#5C5C5C"
        android:textSize="12sp" />
</RelativeLayout>