<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Magenative_review_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textAllCaps="true"
        android:textColor="@color/AppTheme"
        android:textSize="20sp"
         />

    <TextView
        android:id="@+id/Magenative_review_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magenative_review_tittle"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
         />

    <TextView
        android:id="@+id/Magenative_reviewcounttag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magenative_review_by"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:text="@string/rated"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/Magenative_posted_ontag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magenative_review_by"
        android:layout_marginTop="5dp"
        android:layout_toStartOf="@+id/Magenative_posted_on"
        android:text="@string/postedon"
        android:textColor="@color/black"
        android:textSize="15sp"
         />

    <TextView
        android:id="@+id/Magenative_posted_on"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magenative_review_by"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="2dp"
        android:textColor="@color/black"
        android:textSize="14sp"
         />

    <TextView
        android:id="@+id/Magenative_averagerating"
        android:layout_width="30dp"
        android:layout_height="18dp"
        android:layout_below="@+id/Magenative_review_by"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/Magenative_reviewcounttag"
        android:background="@drawable/round_corner"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="12sp"
         />

    <TextView
        android:id="@+id/Magenative_review_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Magenative_averagerating"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="23dp"
        android:textColor="@color/black"
        android:textSize="13sp"

        />
</RelativeLayout>