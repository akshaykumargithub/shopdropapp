<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/MageNative_reviews_linear"
        android:orientation="vertical"></LinearLayout>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MageNative_reviewlisting"
        android:layout_below="@+id/MageNative_view"
        android:visibility="gone"
    >
    </ListView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardUseCompatPadding="true"
        android:id="@+id/MageNative_view"
        android:background="@color/white">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AddReview"
            android:textAllCaps="false"
            android:background="@drawable/buttonbackground"
            android:textColor="@color/txtapptheme_color"
            android:id="@+id/MageNative_addreview1"
            android:visibility="gone"
        />
    </androidx.cardview.widget.CardView>

