<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/MageNative_ratingsection"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MageNative_totalrating"
            android:textColor="@color/black"
            android:textSize="15sp"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            />
        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/rate"
            android:id="@+id/MageNative_ratestar"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/MageNative_totalrating"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/MageNative_reviewtext"
            android:textColor="@color/black"
            android:textSize="15sp"

            android:layout_below="@+id/MageNative_totalrating"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>
        />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/MageNative_writereview"
        app:cardBackgroundColor="@color/AppTheme"
        android:layout_margin="15dp"
        android:layout_gravity="bottom"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Write_a_Review"
            android:layout_gravity="center"
            android:id="@+id/MageNative_writereviewheading"
            android:textSize="13sp"

            android:textColor="@color/white"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>