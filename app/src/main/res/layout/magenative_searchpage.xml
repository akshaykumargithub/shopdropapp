<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@color/AppTheme"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <AutoCompleteTextView
                android:id="@+id/MageNative_editText1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:singleLine="true"
                android:fontFamily="@font/celias_regular"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/pad_15dp"
                android:layout_weight="0.8"
                android:ems="10"
                android:padding="8dp"
                android:textSize="13sp"
                android:hint="@string/SearchYourProducts"
                android:background="@drawable/edittext_bg"
                android:imeOptions="actionSearch"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:inputType="textAutoComplete|textAutoCorrect"
                android:textColor="@color/black">
                <requestFocus />
            </AutoCompleteTextView>

            <ImageView
                android:id="@+id/voicesearch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginStart="@dimen/pad_10dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/micro"
                android:tint="@color/white"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/pad_5dp"
                android:padding="@dimen/pad_5dp"
                android:id="@+id/search_btn"
                android:src="@drawable/ic_right"/>

        </LinearLayout>

    </LinearLayout>

</layout>
