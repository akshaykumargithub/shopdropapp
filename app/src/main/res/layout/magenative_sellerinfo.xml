<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="4dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/magenative_ShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="8dp"
            android:scrollHorizontally="true"
            android:textColor="@color/black"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/magenative_averagerating"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:background="@drawable/round_corner"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"
             />

        <TextView
            android:id="@+id/magenative_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magenative_ShopName"
            android:layout_marginStart="15dp"
            android:textColor="@color/main_color_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/magenative_reviewcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/magenative_address"
            android:layout_marginStart="15dp"
            android:paddingTop="3dp"
            android:textColor="@color/main_color_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/magenative_reviewcount"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@color/ebebebe"
            android:paddingTop="5dp"
            android:paddingBottom="3dp" />

        <LinearLayout
            android:id="@+id/companylogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginStart="15dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/magenative_shopImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:adjustViewBounds="true"
                android:focusableInTouchMode="false"
                android:src="@drawable/bannerplaceholder" />

        </LinearLayout>

        <TextView
            android:id="@+id/magenative_ShopId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="invisible" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>





