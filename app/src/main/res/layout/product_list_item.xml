<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:minHeight="255dp"
            app:cardElevation="3dp"
            app:cardBackgroundColor="@color/white"
            app:cardUseCompatPadding="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/pad_5dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/wishlist_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:layout_marginEnd="8dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_heart_0"
                    android:translationZ="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="match_parent"
                    android:layout_height="173dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/placeholder"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_5dp"
                    android:fontFamily="@font/celias_regular"
                    android:ellipsize="end"
                    android:lineSpacingExtra="2sp"
                    android:maxLines="2"
                    android:text="Peter England 100% Terry
Cotton Hoodie, Comfort "
                    android:textColor="#000000"
                    android:textSize="11.2sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="@id/product_image"
                    app:layout_constraintStart_toStartOf="@id/product_image"
                    app:layout_constraintTop_toBottomOf="@+id/product_image" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/regular_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_2dp"
                    android:fontFamily="@font/celias_regular"
                    android:lineSpacingExtra="-1.2sp"
                    android:text="AED 35.00"
                    android:textColor="#000000"
                    android:textSize="11.2sp"

                    app:layout_constraintEnd_toStartOf="@+id/special_price"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/special_price"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/pad_5dp"
                    android:fontFamily="@font/celias_regular"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="3dp"
                    android:lineSpacingExtra="0.2sp"
                    android:text="AED 55.00"
                    android:textColor="#7e7676"
                    android:textSize="9.8sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/regular_price"
                    app:layout_constraintTop_toBottomOf="@+id/product_name" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/offer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/pad_2dp"
                    android:lineSpacingExtra="-1.2sp"
                    android:fontFamily="@font/celias_regular"
                    android:text="55% off"
                    android:textColor="#fdd302"
                    android:textSize="11.2sp"
                    android:textStyle="normal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/regular_price" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>