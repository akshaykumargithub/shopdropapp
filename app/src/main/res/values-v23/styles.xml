<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/txtapptheme_color</item>
        <!--color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/AppTheme</item>
        <item name="colorPrimary">@color/AppTheme</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/secondory_color</item>
    </style>
</resources>