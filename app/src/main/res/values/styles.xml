    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="colorControlNormal">@color/starcolor</item>
        <item name="colorControlActivated">@color/lighter_gray</item>
        <item name="android:progressTint">@color/starcolor</item>
    </style>

    <style name="SingleChoiceRadioStyle">
            <item name="colorControlNormal">@color/black</item>
            <item name="colorControlActivated">@color/AppTheme</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/user_icon_default_gray</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="TextAppearance.AppTheme.TextInputLayout.HintTextAlt" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/user_icon_default_gray</item>
    </style>

    <style name="MaterialDialog">
        <item name="colorPrimary">@color/secondory_color</item>
    </style>

    <style name="DatePickerButton"  parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/onwhitetextcolor</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/onwhitetextcolor</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/onwhitetextcolor</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/onwhitetextcolor</item>    <!--days of the week-->
        <item name="colorPrimary">@color/onwhitetextcolor</item>
        <item name="colorPrimaryDark">@color/onwhitetextcolor</item>
        <item name="android:textColor">@color/onwhitetextcolor</item>
    </style>

